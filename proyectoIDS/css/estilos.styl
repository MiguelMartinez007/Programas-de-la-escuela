// Colores
gris = #ECF0F1
oscuro = #2E4053
blanco = #fff
verdeclaro = #28B463
verdeoscuro = #239B56
azulclaro = #2E86C1
azuloscuro = #21618C
negro = #17202A
amarilloclaro = #F7DC6F
amarillooscuro = #F1C40F
rojoclaro = #EC7063
rojooscuro = #CB4335
moradoclaro = #A569BD
moradooscuro = #7D3C98
casiBlanco = #F7F9F9



box-sizing(n)
	-webkit-box-sizing n
	-moz-box-sizing n
	box-sizing n
flex(n)
	display -webkit- n
	display -moz- n
	display -ms- n
	display -o- n
	display n
flex-flow(n)
	flex-flow -webkit- n
	flex-flow -moz- n
	flex-flow -ms- n
	flex-flow -o- n
	flex-flow n
align-items(n)
	align-items -webkit- n
	align-items -moz- n
	align-items -ms- n
	align-items -o- n
	align-items n
justify-content(n)
	justify-content -webkit- n
	justify-content -moz- n
	justify-content -ms- n
	justify-content -o- n
	justify-content n
transition(n)
	transition -webkit- n
	transition -moz- n
	transition -ms- n
	transition -o- n
	transition n
word-wrap(n)
	word-wrap -webkit- n
	word-wrap -moz- n
	word-wrap -ms- n
	word-wrap -o- n
	word-wrap n
flex-direction(n)
	flex-direction -webkit- n
	flex-direction -moz- n
	flex-direction -ms- n
	flex-direction -o- n
	flex-direction n

valoresDefault()
	width 100%
	overflow hidden

imagenesFondo()
	background-size 100% 100%
	background-attachment fixed
	background-repeat no-repeat
	
.contenedorMil
	// valoresDefault()
	width 100%
	max-width 1000px
	margin auto
	
// Estilos definidos anteriormente //

botones()
	color blanco
	padding 7px 20px
	font-size 16px
	border none
	&:hover
		cursor pointer
			
.btn_verde
	botones()
	background-color verdeclaro
	&:hover
		background-color verdeoscuro

.btn_azul
	botones()
	background-color azulclaro
	&:hover
		background-color azuloscuro
		
.capaMagica
	position fixed
	z-index 1000
	top -100%
	// top 0
	left 0
	valoresDefault()
	height 100%
	background-color rgba(negro, .5)
	flex(flex)
	flex-flow(row no-wrap)
	justify-content(center)
	align-items(center)
	
form
	width 100%
	max-width 500px
	background-color gris
	padding 50px 20px
	flex(flex)
	flex-flow(column wrap)
	
p#rojo
	color rojooscuro
p#azul
	color azuloscuro
p#rojo,
p#azul
	padding 5px
	
h3#nombreMateria,
h3#NoControl
	color azuloscuro
	
#entrarAdministrador a
	color blanco
	text-decoration none

#formulario
	.cerrar
		// background-color azulclaro
		// padding 13px 20px
		padding 13px 0px
		flex(flex)
		flex-flow(row no-wrap)
		justify-content(flex-end)
		width 100%
		max-width 500px
		margin auto
		span
			font-size 22px
			color blanco
			&:hover
				cursor pointer
				color oscuro

.headerPrincipal
	justify-content(center)
	background-color oscuro
	color blanco
	
.cuadrado
	width 20px
	height 20px
	background-color oscuro
.V
	background-color verdeclaro
.A
	background-color amarilloclaro
.R
	background-color rojoclaro
.M
	background-color moradoclaro
	

.VAnimacion
	&:hover
		background-color rgba(verdeclaro, .3)
.AAnimacion
	&:hover
		background-color rgba(amarilloclaro, .3)
.RAnimacion
	&:hover
		background-color rgba(rojoclaro, .3)
.MAnimacion
	&:hover
		background-color rgba(moradoclaro, .3)
	
input
	border none
	background-color rgba(blanco, .5)
	padding 10px
	color oscuro
	font-size 16px
	


// Efectos globales 
*
	word-wrap(break-word)
	padding 0
	margin 0
	box-sizing(border-box)
	font-family 	'Roboto', sans-serif
	transition(all .25s)
	
body
	background-color gris
	
.contenedorFlotante
	valoresDefault()
	position fixed
	// top -100%
	top 0%
	left 0%
	height 100%
	background-color oscuro
	>.contenedorMil
		max-width 600px
		height 100%
		flex(flex)
		flex-flow(column wrap)
		justify-content(center)
		article
			valoresDefault()
			padding 10px
			flex(flex)
			flex-flow(column wrap)
			section
				valoresDefault()
				color blanco
				margin-bottom 30px
				h1
					font-size 45px
				p,h1,h3
					text-align center
					
header
	valoresDefault()
	padding 10px
	.informacion
		valoresDefault()
		flex(flex)
		flex-flow(row no-wrap)
		justify-content(space-between)
		align-items(center)
		img
			min-width 170px
		h1
			width 100%
			text-align center
		img#exit
			min-width 0
			width 40px
			&:hover
				cursor pointer
				
	
.contenedor
	valoresDefault()
	article
		margin-bottom 30px
	article.informacion
		valoresDefault()
		box-shadow 0 0 20px -5px oscuro
		flex(flex)
		flex-flow(row no-wrap)
		section.indicadores
			valoresDefault()
			max-width 300px
			background-color azulclaro
			color blanco
			padding 20px
			flex(flex)
			flex-flow(column wrap)
			align-items(center)
			h2
				width 100%
				text-align center
			.indicador
				flex(flex)
				flex-flow(column wrap)
				justify-content(space-between)
				> div
					flex(flex)
					flex-flow(row no-wrap)
					margin-top 20px
					p
						margin-left 10px
		section.infoAlumno
			valoresDefault()
			background-color rgba(azulclaro, .9)
			padding 20px
			color blanco
			flex(flex)
			flex-flow(row no-wrap)
			.foto
				valoresDefault()
				max-width 200px
				img
					width 100%
					border solid 5px casiBlanco
				p
					text-align center
					font-weight bold
			.datos
				width 100%
				padding 20px
				flex(flex)
				flex-flow(column wrap)
				justify-content(space-between)
				p
					width 100%
					font-weight bold
	article.tablaReticula
		valoresDefault()
		box-shadow 0 0 20px -5px oscuro
		color blanco
		.headerReticula
			width 100%
			background-color azuloscuro
			padding 20px
			h3
				text-align center
				font-size 25px
		.tabla
			valoresDefault()
			background-color blanco
			.descripcionMateria
				valoresDefault()
				>p
					width 100%
					padding 15px
					font-weight bold
					text-align center
					&:hover
						cursor pointer
				>.nivel
					background-color azulclaro
					&:hover
						background-color casiBlanco
						color oscuro
				>.nivelSeleccionado
					background-color oscuro
				.materias
					valoresDefault()
					flex(flex)
					flex-flow(row no-wrap)
					align-items(stretch)
					background-color rgba(azulclaro, .8)
				.materiasCerradas
					height 0
				.materiasAbiertas
					height auto
					
					.materia
						valoresDefault()
						border solid 1px rgba(oscuro, .1)
						padding 20px 10px
					.materia.edit
						&:hover
							cursor pointer
							background-color casiBlanco
							color oscuro
	.barraBuscar
		valoresDefault()
		form.buscador
			background-color transparent
			padding 0
			max-width none
			margin-top 30px
			margin-bottom 50px
			.inputGroup
				valoresDefault()
				flex(flex)
				flex-flow(row no-wrap)
				align-items(center)
				input[type="text"]
					width 100%
					margin 10px
					border solid 1px rgba(oscuro, .1)
					text-align center
					&:hover
						background-color blanco
					&:focus
						border solid 1px rgba(oscuro, .3)
						background-color blanco
				input[type="button"]
					padding 10px 20px